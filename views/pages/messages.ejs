<% layout("/layouts/messages") %>
<!-- Chat Window -->
<div class="chat">
  <div class="header">
    <img src="<%= user.profilePic.url %>" alt="User" />
    <%= user.username %>
  </div>
  <div class="messages">
    <div class="message">
      <div class="bubble">Hi there!</div>
    </div>
    <div class="message sent">
      <div class="bubble">Hello! How are you?</div>
    </div>
    <div class="message">
      <div class="bubble">I'm good, thanks for asking.</div>
    </div>
    <% for(let message of messages) {%> <% if(message.sender_id.equals(user._id)
    && message.receiver_id.equals(currUser._id)) {%>
    <div class="message">
      <div class="bubble"><%= message.content %></div>
    </div>
    <% } else if (message.sender_id.equals(currUser._id) &&
    message.receiver_id.equals(user._id)) {%>
    <div class="message sent">
      <div class="bubble"><%= message.content %></div>
    </div>
    <% } else{ %> <% } %> <% } %>
  </div>
  <form action="/message/<%= user._id %>/messages" method="post">
    <div class="input-box">
      <input
        type="text"
        name="message"
        placeholder="Write a message..."
        required
      />
      <button>Send</button>
    </div>
  </form>
</div>
